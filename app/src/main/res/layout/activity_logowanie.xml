<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="email"
        android:layout_marginTop="143dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:hint="hasło"/>

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:id="@+id/LoginButton"
        android:layout_below="@id/password"
        android:text="zaloguj"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jeżeli nie posiadasz konta kliknij: "
        android:id="@+id/posiadaniekonta"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:textSize="10dp"
        android:layout_below="@+id/LoginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/RejestracjaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zarejestruj"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/posiadaniekonta"
        android:textColor="#ff0033"
        android:layout_alignBottom="@+id/posiadaniekonta"
        android:layout_toRightOf="@+id/posiadaniekonta"
        android:textStyle="bold"/>



</RelativeLayout>
