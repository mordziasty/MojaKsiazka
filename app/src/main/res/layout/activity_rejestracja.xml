<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tworzenie nowego Użytkownika"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:layout_marginTop="30dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imię:"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/imie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wprowadź imię"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nazwisko:"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/nazwisko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wprowadź nazwisko"

        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:textStyle="bold"
        android:textSize="20dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wprowadź e-mail"
        android:id="@+id/email"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasło:"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/haslo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wprowadź haslo"

        />

    <Button

        android:id="@+id/ZarejestrujButton"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Zarejestruj!"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>





</LinearLayout>